# Conversations - AI chatbot
image:
  repository: lasuite/conversations-backend
  pullPolicy: IfNotPresent
  tag: latest

# Main Ingress
ingress:
  enabled: true
  className: {{ .Values.ingress.className }}
  host: conversations.{{ .Values.domain }}
  annotations:
    cert-manager.io/cluster-issuer: {{ .Values.tls.issuer }}
  tls:
    enabled: true
    secretName: conversations-tls

# Admin Ingress
ingressAdmin:
  enabled: true
  className: {{ .Values.ingress.className }}
  host: conversations.{{ .Values.domain }}
  annotations:
    cert-manager.io/cluster-issuer: {{ .Values.tls.issuer }}
  tls:
    enabled: true
    secretName: conversations-tls

# Media Ingress - disabled (uses nginx auth_subrequest incompatible with HAProxy)
# Use FILE_UPLOAD_MODE: backend_to_s3 instead
ingressMedia:
  enabled: false

# Posthog (disabled)
posthog:
  ingress:
    enabled: false
  ingressAssets:
    enabled: false

# Backend
backend:
  replicas: 1
  envVars:
    # Django admin
    DJANGO_SUPERUSER_EMAIL: {{ .Values.adminEmail }}
    DJANGO_SUPERUSER_PASSWORD:
      secretKeyRef:
        name: conversations-secrets
        key: DJANGO_SUPERUSER_PASSWORD
    DJANGO_CONFIGURATION: Production
    DJANGO_SETTINGS_MODULE: conversations.settings
    DJANGO_ALLOWED_HOSTS: conversations.{{ .Values.domain }}
    DJANGO_CSRF_TRUSTED_ORIGINS: https://conversations.{{ .Values.domain }}
    DJANGO_SECRET_KEY:
      secretKeyRef:
        name: conversations-secrets
        key: DJANGO_SECRET_KEY
    # Database
    DB_HOST:
      configMapKeyRef:
        name: infra-urls
        key: POSTGRES_HOST
    DB_PORT:
      configMapKeyRef:
        name: infra-urls
        key: POSTGRES_PORT
    DB_NAME: conversations
    DB_USER: conversations
    DB_PASSWORD:
      secretKeyRef:
        name: conversations-secrets
        key: DB_PASSWORD
    # Redis
    REDIS_URL:
      secretKeyRef:
        name: conversations-secrets
        key: REDIS_URL
    DJANGO_CELERY_BROKER_URL:
      secretKeyRef:
        name: conversations-secrets
        key: DJANGO_CELERY_BROKER_URL
    # S3 - use backend_to_s3 mode (media ingress disabled)
    FILE_UPLOAD_MODE: backend_to_s3
    AWS_S3_ENDPOINT_URL:
      configMapKeyRef:
        name: infra-urls
        key: S3_ENDPOINT
    AWS_STORAGE_BUCKET_NAME: conversations-media-storage
    AWS_S3_ACCESS_KEY_ID:
      secretKeyRef:
        name: conversations-secrets
        key: AWS_S3_ACCESS_KEY_ID
    AWS_S3_SECRET_ACCESS_KEY:
      secretKeyRef:
        name: conversations-secrets
        key: AWS_S3_SECRET_ACCESS_KEY
    STORAGES_STATICFILES_BACKEND: django.contrib.staticfiles.storage.StaticFilesStorage
    {{- if eq .Values.s3.provider "oos" }}
    # OOS (Outscale) compatibility - disable checksum for older SDK compat
    AWS_REQUEST_CHECKSUM_CALCULATION: WHEN_REQUIRED
    AWS_RESPONSE_CHECKSUM_VALIDATION: WHEN_REQUIRED
    {{- end }}
    # OIDC - Browser redirects (external)
    OIDC_OP_AUTHORIZATION_ENDPOINT:
      configMapKeyRef:
        name: infra-urls
        key: OIDC_OP_AUTHORIZATION_ENDPOINT
    OIDC_OP_LOGOUT_ENDPOINT:
      configMapKeyRef:
        name: infra-urls
        key: OIDC_OP_LOGOUT_ENDPOINT
    # OIDC - Backend-to-backend (internal)
    OIDC_OP_JWKS_ENDPOINT:
      configMapKeyRef:
        name: infra-urls
        key: OIDC_OP_JWKS_ENDPOINT
    OIDC_OP_TOKEN_ENDPOINT:
      configMapKeyRef:
        name: infra-urls
        key: OIDC_OP_TOKEN_ENDPOINT
    OIDC_OP_USER_ENDPOINT:
      configMapKeyRef:
        name: infra-urls
        key: OIDC_OP_USER_ENDPOINT
    OIDC_RP_CLIENT_ID: conversations
    OIDC_RP_CLIENT_SECRET:
      secretKeyRef:
        name: conversations-secrets
        key: OIDC_RP_CLIENT_SECRET
    OIDC_RP_SIGN_ALGO:
      configMapKeyRef:
        name: infra-urls
        key: OIDC_RP_SIGN_ALGO
    OIDC_RP_SCOPES:
      configMapKeyRef:
        name: infra-urls
        key: OIDC_RP_SCOPES
    OIDC_VERIFY_SSL:
      configMapKeyRef:
        name: infra-urls
        key: OIDC_VERIFY_SSL
    # AI / LLM
    {{- if .Values.apps.conversations.ai.baseUrl }}
    AI_BASE_URL: {{ .Values.apps.conversations.ai.baseUrl }}
    {{- end }}
    {{- if .Values.apps.conversations.ai.model }}
    AI_MODEL: {{ .Values.apps.conversations.ai.model }}
    {{- end }}
    {{- if .Values.apps.conversations.ai.apiKey }}
    AI_API_KEY: {{ .Values.apps.conversations.ai.apiKey }}
    {{- end }}
    # Redirects
    LOGIN_REDIRECT_URL: https://conversations.{{ .Values.domain }}
    LOGIN_REDIRECT_URL_FAILURE: https://conversations.{{ .Values.domain }}
    LOGOUT_REDIRECT_URL: https://conversations.{{ .Values.domain }}

# Frontend
frontend:
  replicas: 1
  image:
    repository: lasuite/conversations-frontend
    pullPolicy: IfNotPresent
    tag: latest
