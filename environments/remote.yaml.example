domain: __DOMAIN__
adminEmail: __ADMIN_EMAIL__

apps:
  docs:
    enabled: true
  meet:
    enabled: true
  drive:
    enabled: true
  people:
    enabled: true
  conversations:
    enabled: false
  find:
    enabled: false

postgres:
  enabled: false
  host: postgres.example.com
  port: 5432

keycloak:
  enabled: true           # true = deploy lasuite-keycloak, false = use external
  realm: lasuite
  # URL overrides (optional when enabled: true, required when enabled: false)
  externalUrl: ""         # Empty = use auth.{domain}, or set to external URL like https://sso.example.com
  backendUrl: http://keycloak-keycloakx-http.lasuite-keycloak.svc.cluster.local  # Internal service URL (override when using external Keycloak)

redis:
  enabled: false
  host: redis.example.com
  port: 6379

minio:
  enabled: true

livekit:
  enabled: true

opensearch:
  enabled: false
  host: opensearch-cluster-master.lasuite-opensearch.svc.cluster.local
  port: 9200

s3:
  provider: minio
  endpoint: http://minio.lasuite-minio.svc.cluster.local:9000
  host: minio.lasuite-minio.svc.cluster.local
  port: 9000
  # For production, use AWS S3:
  # provider: aws
  # endpoint: https://s3.eu-west-1.amazonaws.com
  # host: s3.eu-west-1.amazonaws.com
  # port: 443
  # For OOS (Outscale):
  # provider: oos
  # endpoint: https://oos.eu-west-2.outscale.com
  # host: oos.eu-west-2.outscale.com
  # port: 443

ingress:
  enabled: true
  className: haproxy

certManager:
  enabled: true

reflector:
  enabled: true

tls:
  issuer: letsencrypt
  email: __ADMIN_EMAIL__

# Generate with: openssl rand -hex 24
secretSeed: "REPLACE_ME"
